<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:navGraph="@navigation/nav_graph"
    tools:context=".ui.RezeptBearbeitenFragment" >


    <EditText
        android:id="@+id/editRezeptErstellerTV2"
        android:textColor="@color/textColorPrimaryDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:hint="@string/Ersteller"
        app:layout_constraintBottom_toTopOf="@+id/RezeptSpeichernBTN"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/editRezeptNameTV"
        android:textColor="@color/textColorPrimaryDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="Rezeptname"
        app:layout_constraintBottom_toTopOf="@+id/editRezeptZutatenTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editRezeptZutatenTV"
        android:textColor="@color/textColorPrimaryDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="Zutaten"
        app:layout_constraintBottom_toTopOf="@+id/editRezeptZubereitungTV"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/editRezeptZubereitungTV"
        android:textColor="@color/textColorPrimaryDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:hint="Zubereitung"
        app:layout_constraintBottom_toTopOf="@+id/RezeptSpeichernBTN"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/RezeptSpeichernBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="Speichern"
        android:elevation="20dp"

        app:backgroundTint="@color/colorPrimaryDay"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ZurueckRezeptBearbeitenBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="ZurÃ¼ck"
        android:elevation="20dp"

        app:backgroundTint="@color/colorPrimaryDay"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="58dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRezeptZubereitungTV"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
